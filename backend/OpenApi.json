{
  "openapi": "3.0.3",
  "info": {
    "title": "TodoApp API",
    "description": "API CRUD untuk TodoApp dengan autentikasi API Key",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api"
    }
  ],
  "paths": {
    "/todos": {
      "get": {
        "security": [
          {
            "TodosAuth": []
          }
        ],
        "tags": ["TodoApp"],
        "summary": "Get all Todos",
        "description": "Mengambil semua data todos",
        "responses": {
          "200": {
            "description": "Success get all Todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "number" },
                    "status": { "type": "string" },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Todo"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "security": [
          {
            "TodosAuth": []
          }
        ],
        "tags": ["TodoApp"],
        "summary": "Create new Todo",
        "description": "Menambahkan Todo baru",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateTodo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success create Todo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "number" },
                    "status": { "type": "string" },
                    "data": {
                      "$ref": "#/components/schemas/Todo"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/todos/{todoId}": {
      "put": {
        "security": [
          {
            "TodosAuth": []
          }
        ],
        "tags": ["TodoApp"],
        "summary": "Update Todo by ID",
        "description": "Mengupdate Todo berdasarkan ID",
        "parameters": [
          {
            "name": "todoId",
            "in": "path",
            "required": true,
            "description": "Todo ID",
            "schema": { "type": "number" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateTodo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update Todo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "number" },
                    "status": { "type": "string" },
                    "data": {
                      "$ref": "#/components/schemas/Todo"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [
          {
            "TodosAuth": []
          }
        ],
        "tags": ["TodoApp"],
        "summary": "Delete Todo by ID",
        "description": "Menghapus Todo berdasarkan ID",
        "parameters": [
          {
            "name": "todoId",
            "in": "path",
            "required": true,
            "description": "Todo ID",
            "schema": { "type": "number" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success delete Todo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "number" },
                    "status": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "TodosAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "Authentication for Todo API"
      }
    },
    "schemas": {
      "CreateOrUpdateTodo": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" }
        }
      },
      "Todo": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" }
        }
      }
    }
  }
}
